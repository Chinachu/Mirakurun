{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "es2022",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "removeComments": true,
    "sourceMap": true,
    "incremental": true,
    "esModuleInterop": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "outDir": "../../lib/ui"
  },
  "exclude": [
    "node_modules"
  ]
}
